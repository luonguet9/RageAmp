<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/left_graph"
    app:startDestination="@id/leftFragment">

    <fragment
        android:id="@+id/leftFragment"
        android:name="com.example.rageamp.ui.left.LeftFragment"
        android:label="LeftFragment"
        tools:layout="@layout/fragment_left">
        <action
            android:id="@+id/action_leftFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
        <action
            android:id="@+id/action_leftFragment_to_songFragment"
            app:destination="@id/songFragment" />
        <action
            android:id="@+id/action_leftFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.rageamp.ui.playlist.PlaylistFragment"
        android:label="PlaylistFragment"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_playlistFragment_to_playlistDetailFragment"
            app:destination="@id/playlistDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="com.example.rageamp.ui.song.SongFragment"
        android:label="SongFragment" />
    <fragment
        android:id="@+id/playlistDetailFragment"
        android:name="com.example.rageamp.ui.playlist_detail.PlaylistDetailFragment"
        android:label="PlaylistDetailFragment"
        tools:layout="@layout/fragment_playlist_detail" />
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.rageamp.ui.album.AlbumFragment"
        android:label="AlbumFragment"
        tools:layout="@layout/fragment_album">
        <action
            android:id="@+id/action_albumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.example.rageamp.ui.album_detail.AlbumDetailFragment"
        android:label="AlbumDetailFragment"
        tools:layout="@layout/fragment_album_detail">
        <argument
            android:name="album"
            app:argType="com.example.rageamp.data.model.Album"/>
    </fragment>
</navigation>
