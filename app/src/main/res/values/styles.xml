<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageButton">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:background">@drawable/bg_image_button</item>
        <item name="android:padding">@dimen/dp12</item>
    </style>

    <style name="ImageButtonHeader" parent="ImageButton">
        <item name="android:padding">@dimen/dp14</item>
    </style>

    <style name="DividerIconHeader">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp8</item>
    </style>

    <style name="MySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="thumbColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Bitrate_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:background">@drawable/bg_bitrate</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
    </style>

    <style name="DialogTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">#992F2E30</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
<!--        <item name="android:popupBackground">@color/dark_gray</item>
        <item name="android:itemTextAppearance">@style/MyPopupMenuText</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small</item>-->
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyPopupMenuText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemPopupText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_item_popup</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp16</item>
        <item name="android:paddingBottom">@dimen/dp16</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

</resources>
